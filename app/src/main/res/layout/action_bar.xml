<?xml version="1.0" encoding="utf-8"?>
<!--柳博程-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#08c29d"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/button_back"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivBack"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTitle"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_centerInParent="true" />

     <Button
        android:background="#08c29d"
        android:id="@+id/btnRight"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <Button
        android:background="@drawable/action_bar_team_selected"
        android:id="@+id/btnCenterLeft"
        android:layout_width="63dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="团队"
        android:textColor="#08c29d"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/tvTitle"/>

    <Button
        android:background="@drawable/action_bar_customer_normol"
        android:id="@+id/btnCenterRight"
        android:layout_width="63dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="客户"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/tvTitle"/>
</RelativeLayout>