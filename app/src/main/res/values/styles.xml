<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--Action bar style-->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:height">50dp</item>
        <item name="height">50dp</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/menushow</item>
        <item name="android:windowExitAnimation">@anim/menuhide</item>
    </style>

    <!-- dialog -->
    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--List View-->
    <style name="ListView">
        <!--分隔线高度-->
        <item name="android:dividerHeight">0.1dp</item>
        <!--分隔线颜色-->
        <item name="android:divider">#cdcdcd</item>
        <!--footerView不设置分隔线-->
        <item name="android:footerDividersEnabled">false</item>
        <!--headerView不设置分隔线-->
        <item name="android:headerDividersEnabled">false</item>
    </style>

    <!--标签文本-->
    <style name="LabelText">
        <!--字体大小-->
        <item name="android:textSize">16sp</item>
        <!--字体颜色-->
        <item name="android:textColor">#424242</item>
    </style>

    <!--内容文本-->
    <style name="ContentText">
        <!--字体大小-->
        <item name="android:textSize">15sp</item>
        <!--字体颜色-->
        <item name="android:textColor">#7a7b83</item>
    </style>

    <!--输入框-->
    <style name="EditText">
        <!--提示文本字体颜色-->
        <item name="android:textColorHint">#a3a3a3</item>
        <!--输入文本字体颜色-->
        <item name="android:textColor">#7a7b83</item>
        <!--字体大小-->
        <item name="android:textSize">16sp</item>
        <!--最低高度-->
        <item name="android:minHeight">36dp</item>
        <!--默认对其方式，上下居中、靠左-->
        <item name="android:gravity">center_vertical|left</item>
        <!--默认文字边距-->
        <item name="android:padding">5dp</item>
    </style>

    <!--Item-->
    <style name="ItemView">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">18sp</item>
    </style>

